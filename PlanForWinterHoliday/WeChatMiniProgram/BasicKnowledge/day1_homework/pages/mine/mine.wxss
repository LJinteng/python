/* pages/mine/mine.wxss */
.sbf{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sbf .item_s1{
  width: 750rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #20B2AA;
}
.sbf .item_s1 .s1{
  width: 700rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  color: #ffffff;
}
.sbf .item_s1 .s1 .tx{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sbf .item_s1 .s2{
  width: 700rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #ffffff;
}
.sbf .item_s1 .s2 .item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sbf .item_s1 .s1 .tx image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.sbf .item_s2{
  width: 700rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.sbf .item_s2 .item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sbf .item_s2 .item image{
  width: 50rpx;
  height: 50rpx;
  padding-bottom: 20rpx;
}
.dibu{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dibu .item_s1{
  padding-top: 50rpx;
  width: 720rpx;
  display: flex;
  flex-direction: column;
}
.dibu .item_s1 .item{
  padding-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 40rpx;
}
.dibu .item_s1 .item .msg{
  font-size: 25rpx;
  color: #696969;
}
.dibu .item_s2{
  padding-top: 100rpx;
  width: 720rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.dibu .item_s2 text{
  font-size: 20rpx;
}
