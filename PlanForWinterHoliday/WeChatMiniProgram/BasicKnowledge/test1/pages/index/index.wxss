/* pages/index/index.wxss */
.menu1 .item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.menu2 .item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.menu1{
  display: flex;
  /* 在水平方向排列，规定主轴的方向水平*/
  flex-direction: row;
  /* 元素在水平方向如何展示：center/space-around/space-between */
  justify-content: space-around;
}
.menu1 .item{
  display: flex;
  /* 规定主轴方向垂直 */
  flex-direction: column;
  align-items: center;
}
.menu2{
  display: flex;
  /* 在水平方向排列，规定主轴的方向水平*/
  flex-direction: row;
  /* 元素在水平方向如何展示：center/space-around/space-between */
  justify-content: space-around;
}
.menu2 .item{
  display: flex;
  /* 规定主轴方向垂直 */
  flex-direction: column;
  align-items: center;
}
.auction .item .title{
  font-size: 50rpx;
  font-weight: 600;
}
.auction .item .tips{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  color: #8c8c8c;
}
.auction .item .big{
  height: 400rpx;
}
.auction .item .big image{
  width: 100%;
  height: 100%;
}
.auction .item .small{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.auction .item .small image{
  height: 100rpx;
  width: 100rpx;
  padding-right: 20px;
}